wayfire_sources = ['main.cpp',   'core.cpp', 'opengl.cpp',
                   'plugin.cpp', 'wm.cpp',
                   'view/surface.cpp',
                   'view/view.cpp',
                   'view/view-util.cpp',
                   'view/xdg-shell-v6.cpp',
                   'view/xdg-shell.cpp',
                   'view/xwayland.cpp',
                   'view/layer-shell.cpp',
                   'view/view-3d.cpp',
                   'output/plugin-loader.cpp',
                   'output/output.cpp',
                   'output/render-manager.cpp',
                   'output/wayfire-shell.cpp',
                   'output/wf-output-config.cpp']

wayfire_dependencies = [wayland_server, wlroots, xkbcommon, libinput,
                       pixman, egl, libevdev, glesv2, glm, wf_protos,
                       wfconfig]

if conf_data.get('BUILD_WITH_IMAGEIO')
    wayfire_sources += ['img.cpp']
    wayfire_dependencies += [jpeg, png]
endif

executable('wayfire', wayfire_sources,
        dependencies: wayfire_dependencies,
        include_directories: [wayfire_conf_inc, wayfire_api_inc],
        link_args: '-ldl',
        install: true)
